{
  "name": "tsboilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for typescript project",
  "main": "index.js",
  "scripts": {
    "build": "webpack",
    "test": "jest --coverage",
    "lint": "tslint 'src/**/*.ts'",
    "pretest": "npm run lint"
  },
  "author": "Shane Arthur",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^16.0.3",
    "awesome-typescript-loader": "^3.0.0-beta.14",
    "jest": "^18.1.0",
    "ts-jest": "^18.0.1",
    "ts-loader": "^1.3.3",
    "tslint": "^4.4.2",
    "typescript": "^2.1.5",
    "webpack": "^1.14.0",
    "webpack-babel-jest": "^1.0.4"
  },
  "dependencies": {
    "@types/node": "^7.0.4"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "testRegex": "<rootDir>(src/).*\\.(test|spec)\\.(ts|js)$",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.{ts}",
      "!**/node_modules/**",
      "!src/**/*.{spec.ts}"
    ]
  }
}
